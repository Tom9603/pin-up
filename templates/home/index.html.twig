{% extends 'base.html.twig' %}

{% block title %}Accueil | Miss Pin-up France Bretagne{% endblock %}

{% block body %}

    <div class="content">
        <h1>Comité miss pin-up bretagne</h1>

            <img src="{{ asset('images/logo.png') }}" class ="logo" alt="">

        <div class="presentation-container">
            <img src=" {{ asset('images/vinyle.png') }}" class="vinyle" alt="">
            <p class="presentation">
                L'association Pin-Up Bretagne rassemble des passionées de culture rétro, mode vintage et événements festifs.<br><br>
                Rejoignez-nous pour des défilés, shootings, salons et moment hauts en couleurs !
            </p>
            <img src=" {{ asset('images/present.png') }}" alt="">
        </div>
    </div>
    <section>
        <h2>Pourquoi nous rejoindre ?</h2>
        <div class="grid-home">
            <div>
                <img src="{{ asset('images/shoe.png') }}" alt="">
                <p>Communauté engagée</p>
            </div>
            <div>
                <img src="{{ asset('images/jukebox.png') }}" alt="">
                <p>événements exclusifs</p>
            </div>
            <div>
                <img src="{{ asset('images/lipstick.png') }}" alt="">
                <p>Espace boutique</p>
            </div>
            <div>
                <img src="{{ asset('images/dress.png') }}" alt="">
                <p>Photoshoot événementiel</p>
            </div>
        </div>
    </section>
    <section>
        <h2>Derniers évènements</h2>
        <div class="carousel">
            <button class="prev">‹</button>
            <div class="carousel-track">
                {% for image in images|reverse %}
                    <div class="carousel-item">
                        <img src="{{ asset('uploads/media/' ~ image.filename) }}" alt="">
                    </div>
                {% else %}
                    <p>Aucune image disponible</p>
                {% endfor %}
            </div>
            <button class="next">›</button>
        </div>
    </section>
    <a href="{{ path('app_event') }}" class="btn">Accéder aux événements</a>
{% endblock %}
