{% extends 'base.html.twig' %}

{% block title %}Accueil | Miss Pin-up Bretagne{% endblock %}

{% block body %}

    <div class="content">
        <h1 class="home-page">Comité miss pin-up bretagne</h1>

        <div class="logo">
            <img src="{{ asset('images/logo.png') }}" alt="">
        </div>

        <div class="presentation-container">
            <p class="presentation">
                L’association Miss Pin-Up Bretagne rassemble des passionnées de culture rétro, de mode vintage et d’événements festifs.
                <br><br>
                Rejoignez-nous pour partager de bons moments lors de défilés, shootings, salons et animations hauts en couleurs…
                et pourquoi pas vous inscrire pour tenter l’aventure en participant à l’élection annuelle de Miss Pin-Up Bretagne !
                <img src=" {{ asset('images/vinyle.png') }}" class="vinyle" alt="">
                <img src=" {{ asset('images/present.png') }}" class="pinup" alt="">
            </p>
        </div>
    </div>
    <section>
        <h2 class="red">Pourquoi nous rejoindre ?</h2>
        <div class="grid-home">
            <div>
                <img src="{{ asset('images/communaute.png') }}" alt="">
                <p>Communauté engagée</p>
            </div>
            <div>
                <img src="{{ asset('images/jukebox.png') }}" alt="">
                <p>événements exclusifs</p>
            </div>
            <div>
                <img src="{{ asset('images/lipstick.png') }}" alt="">
                <p>Espace boutique</p>
            </div>
            <div>
                <img src="{{ asset('images/photo.png') }}" alt="">
                <p>Photoshoot événementiel</p>
            </div>
        </div>
    </section>
    <section>
        <h2>Derniers évènements</h2>
        <div class="carousel">
            <button class="prev">‹</button>
            <div class="carousel-track">
                {% for image in images|reverse %}
                    <div class="carousel-item">
                        <img src="{{ asset('uploads/media/' ~ image.filename) }}" alt="">
                    </div>
                {% else %}
                    <p>Aucune image disponible</p>
                {% endfor %}
            </div>
            <button class="next">›</button>
        </div>
    </section>
    <a href="{{ path('app_events') }}" class="btn">Accéder aux événements</a>
{% endblock %}
