{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block meta %}
    <meta name="description" content="Contactez le comité Miss Pin-up Bretagne pour toute question ou information.
    Nous sommes là pour vous aider et répondre à vos demandes concernant nos événements, inscriptions et activités.">
{% endblock %}

{% block body %}
    <section class="contact-page">

        <div class="mail-container">
            <img src="{{ asset('images/mail.png') }}" alt="">
        </div>

        <h1>Contactez-nous</h1>

        <div class="form-container">
            <h2 class="contact">Contactez-nous !</h2>
            {{ form_start(contactForm, {'method': 'POST'}) }}
            {{ form_row(contactForm.nom) }}
            {{ form_row(contactForm.email) }}
            {{ form_row(contactForm.message) }}
            {{ form_row(contactForm.envoyer) }}
            {% if confirmation %}
                <p class="success">{{ confirmation }}</p>
            {% endif %}
            {{ form_end(contactForm) }}

            <img class ="tel" src="{{ asset('images/tel.png') }}" alt="">
        </div>

    </section>
{% endblock %}
