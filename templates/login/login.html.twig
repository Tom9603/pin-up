{% extends 'base.html.twig' %}

{% set body_class = 'login-page' %}

{% block title %}Connectez-vous !{% endblock %}

{% block meta %}
    <meta name="description" content="Connectez-vous à votre espace personnel sur le site Miss Pin-Up Bretagne pour accéder à vos informations et participer aux activités du comité.">
{% endblock %}

{% block body %}

    <section class ="login-container" role="main">

        <h1>Connectez-vous</h1>
        <a class ="back" href="{{ path('app_home') }}">Retour à l'accueil</a>

        <div class="login-box">
            <form method="post">

                {% if error %}
                    <div class="alert alert-danger login-error" role="alert" aria-live="assertive">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    </div>
                {% endif %}

                <div class="blur">

                    <label for="username">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" placeholder="Saisissez votre e-mail" id="username" class="form-control" autocomplete="email" required autofocus>

                    <label for="password">Mot de passe</label>
                    <div class="password-field">
                        <input type="password" name="_password" placeholder="Saisissez votre mot de passe" id="password" class="form-control" autocomplete="current-password" required>
                        <i class="fa-solid fa-eye toggle-password" onclick="togglePassword(this)"></i>
                    </div>
                    <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}" class="login-error">

                    <div class="remember-container">

                        <label for="_remember_me">
                            <input type="checkbox" name="_remember_me" id="_remember_me">
                            Se souvenir de moi
                        </label>

                    </div>

                    <button class="btn btn-lg btn-primary" type="submit">
                        Connexion
                    </button>

                    <div class="possibilities">

                        <div>
                            <a href="{{ path('app_register') }}">Inscrivez-vous</a>
                        </div>
                        <div>
                            <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
                        </div>

                    </div>
                </div>
            </form>
        </div>

    </section>

    <script>
        function togglePassword(icon) {
            const input = icon.previousElementSibling;
            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                input.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }
    </script>

{% endblock %}
