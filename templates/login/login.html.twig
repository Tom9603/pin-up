{% extends 'base.html.twig' %}

{% set body_class = 'login-page' %}

{% block title %}Connectez-vous !{% endblock %}

{% block body %}

    <section class ="login-container">

        <h1>Connectez-vous</h1>
        <a class ="back" href="{{ path('app_home') }}">Retour à l'accueil</a>

        <div class="login-box">
            <form method="post">

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    </div>
                {% endif %}

                <div class="blur">

                    <label for="username">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" placeholder="Saisissez votre e-mail" id="username" class="form-control" autocomplete="email" required autofocus>

                    <label for="password">Mot de passe</label>
                    <input type="password" name="_password" placeholder="Saisissez votre mot de passe" id="password" class="form-control" autocomplete="current-password" required>
                    <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                    <div class="remember-container">

                        <label for="_remember_me">
                            <input type="checkbox" name="_remember_me" id="_remember_me">
                            Se souvenir de moi
                        </label>

                    </div>

                    <button class="btn btn-lg btn-primary" type="submit">
                        Connexion
                    </button>

                    <div class="possibilities">

                        <div>
                            <a href="{{ path('app_register') }}">Inscrivez-vous</a>
                        </div>
                        <div>
                            <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
                        </div>

                    </div>
                </div>
            </form>
        </div>

    </section>
{% endblock %}
